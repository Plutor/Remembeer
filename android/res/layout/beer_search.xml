<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/beernameCaption"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/beername" />

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:measureAllChildren="true">
		<AutoCompleteTextView
			android:id="@+id/beername"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="textCapWords"
			android:imeOptions="actionDone" />
			
		<LinearLayout
			android:orientation="horizontal"
			android:id="@+id/beerPreview"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:background="@drawable/beer_preview_outline">
			
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/beerPreviewName"
					android:textSize="18dip"
					android:textStyle="bold"
		            android:singleLine="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/beerPreviewDetails"
					android:textSize="11dip"
		            android:paddingLeft="11dip"
					android:singleLine="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			
		    <ImageView android:id="@+id/searchAgainIcon"
		    	android:src="@drawable/search"
		        android:layout_width="32dip"
		        android:layout_height="32dip"
		        android:layout_gravity="center_vertical"
		        android:scaleType="center" />
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
